{
    "converter": {
        "prototype": "temp-converter"
    },

    "celsiusTextfield": {
        "prototype": "montage/ui/number-field.reel",
        "properties": {
            "element": {"#": "celsius"}
        },
        "bindings": {
            "value": {"<->": "(+@fahrenheitTextfield.value - 32) / 1.8"}
        }
    },

    "fahrenheitTextfield": {
        "prototype": "montage/ui/number-field.reel",
        "properties": {
            "element": {"#": "fahrenheit"},
            "value": "32"
        }
    },
    
    "barometer": {
        "prototype": "montage/ui/slider.reel",
        "properties": {
            "element": {"#": "barometer"},
            "axis": "vertical"
        },
        "bindings": {
            "value": {"<->": "@fahrenheitTextfield.value"}
        }
    }
}
